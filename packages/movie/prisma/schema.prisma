// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMINISTRATOR
  USER
  REVIEWER
}

enum ParentalGuidance {
  GENERAL_AUDIENCE
  PARENTAL_GUIDANCE_SUGGESTED
  PARENTAL_STRONGLY_CAUTIONED
  RESTRICTED
}

enum TicketType {
  FREE
  HALF_PRICE
  PROMOTION
  STANDARD
}

enum Room {
  D_BOX
  D_LUX
  IMAX
  STANDARD
}

enum SeatStatus {
  AVAILABLE
  BLOCKED
  BUSY
  SELECTED
}

enum SeatType {
  OVERWEIGHT
  REDUCED_MOBILITY
  STANDARD
  WHEELCHAIR
}

model SessionSeats {
  id        String     @id @default(uuid())
  line      String
  column    Int
  type      SeatType   @default(STANDARD)
  status    SeatStatus @default(AVAILABLE)
  Session   Session?   @relation(fields: [sessionId], references: [id])
  sessionId String?
  Ticket    Ticket[]
}

model Session {
  id           String         @id @default(uuid())
  sessionDate  DateTime
  room         Room
  caption      Boolean        @default(false)
  movie        Movie          @relation(fields: [movieId], references: [id])
  movieId      String
  Ticket       Ticket[]
  SessionSeats SessionSeats[]
}

model Movie {
  id                String           @id @default(uuid())
  name              String
  description       String
  duration          Int
  director          String
  parental_guidance ParentalGuidance @default(GENERAL_AUDIENCE)
  thumbnail         String?
  rating            Float
  languages         String[]
  Session           Session[]
}

model Ticket {
  id            String       @id @default(uuid())
  session       Session      @relation(fields: [sessionId], references: [id])
  user          User         @relation(fields: [userId], references: [id])
  seat          SessionSeats @relation(fields: [sessionSeatsId], references: [id])
  price         Decimal      @db.Decimal(10, 2)
  paymentStatus Boolean      @default(false)
  type          TicketType   @default(STANDARD)
  pucharseDate  DateTime?    @default(now())

  sessionId      String
  userId         String
  sessionSeatsId String
}

model User {
  id        String   @id @default(uuid())
  role      UserRole @default(USER)
  password  String
  name      String
  country   String
  email     String?
  birthDate DateTime
  phone     String?
  Ticket    Ticket[]
}
